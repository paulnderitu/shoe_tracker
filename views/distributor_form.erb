<h1>Add a New Distributor</h1>
 <form action="/distributors" method="post">
   <div class="form-group">
     <label for="distributor_name">Distributor Name:</label>
     <input type="text" name="distributor_name" id="distributor_name">
   </div>
   <div class="form-group">
     <label for="city">City:</label>
     <input type="text" name="city" id="street">
   </div>
   <div class="form-group">
     <label for="street">Street:</label>
     <input type="text" name="street" id="street">
   </div>
   <div class="form-group">
     <label for="building">Building:</label>
     <input type="text" name="building" id="building">
   </div>
   <div class="form-group">
    <label for="tel">Telephone no:</label>
     <input type="tel" name="tel" id="tel">
   </div>

   <div class="form-group">
    <label for="brand_ids[]">Select brands for this Distributor:</label>
    <% if @brands.any?() %>
      <% @brands.each() do |brand| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="brand_ids[]" value="<%= brand.id()%>"><%= brand.name()%>
        </label>
      </div>
      <% end %>
    <%else%>
    <p>Add a new brand to this distributor.</p>
    <% end %>
  </div>

  <button type="submit" class="btn">Add Distributor</button>
 </form>

 <h3>Cant find what you are looking for? Add your brand:</h3>
  <form action="/brands" method="post">
    <div class="form-group">
      <label for="brand_name">Brand Name:</label>
      <input type="text" name="brand_name">
    </div>
    <button type="submit" class="btn">Add Brand</button>
  </form>
